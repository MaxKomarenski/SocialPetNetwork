        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_comment_in_comment_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="text comment comment"
        app:layout_constraintStart_toStartOf="@+id/name_and_surname_in_comment_raw"
        app:layout_constraintTop_toBottomOf="@+id/name_and_surname_in_comment_raw" />

