<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prime_constrainLayout_in_item"
    android:background="@drawable/background_for_raw_of_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/small_constraintLayout_in_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo_in_user_friend_recycler_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/test_photo"
            app:civ_border_color="#43b748"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo_in_user_friend_recycler_view"
            app:layout_constraintStart_toEndOf="@+id/user_photo_in_user_friend_recycler_view"
            app:layout_constraintTop_toTopOf="@+id/user_photo_in_user_friend_recycler_view"
            app:layout_constraintVertical_bias="0.444">

            <TextView
                android:id="@+id/name_of_user_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Komarenskii"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalbaobik"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/breed_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="breed"
                android:textColor="#979ea4"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/indicator_in_user_friend_recycler_view"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/green_dot"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo_in_user_friend_recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/user_photo_in_user_friend_recycler_view" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:visibility="gone"
        android:id="@+id/big_constraintLayout_in_item"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pressed_user_photo_in_user_friend_recycler_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/test_photo"
            app:civ_border_color="#43b748"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pressed_indicator_in_user_friend_recycler_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/green_dot"
            app:layout_constraintBottom_toBottomOf="@+id/pressed_user_photo_in_user_friend_recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/pressed_user_photo_in_user_friend_recycler_view" />


        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toEndOf="@+id/pressed_user_photo_in_user_friend_recycler_view"
            app:layout_constraintTop_toTopOf="@+id/pressed_user_photo_in_user_friend_recycler_view">

            <TextView
                android:id="@+id/pressed_name_of_user_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Komarenskii"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pressed_name_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pressed_breed_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="breed"
                android:textColor="#979ea4"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pressed_user_photo_in_user_friend_recycler_view">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/message_button_in_pressed_item"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/message_button_in_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="message"
                    android:textSize="15sp"
                    android:textColor="#000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:id="@+id/map_button_in_pressed_item"
                    android:scaleType="fitCenter"
                    android:src="@drawable/map_button_in_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="map"
                    android:textSize="15sp"
                    android:textColor="#000"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:id="@+id/info_button_in_pressed_item"
                    android:src="@drawable/info_button_in_item" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="info"
                    android:textSize="15sp"
                    android:textColor="#000"/>

            </RelativeLayout>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>