<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/small_constraintLayout_in_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo_in_friendship_recycler_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/test_photo"
        app:civ_border_color="#43b748"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/user_photo_in_friendship_recycler_view"
        app:layout_constraintStart_toEndOf="@+id/user_photo_in_friendship_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/user_photo_in_friendship_recycler_view"
        app:layout_constraintVertical_bias="0.444">

        <TextView
            android:id="@+id/name_of_pet_in_user_friend_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dalbaobik"
            android:textColor="#000"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/breed_of_pet_in_user_friend_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="breed"
            android:textColor="#979ea4"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4">

        <ImageView
            android:id="@+id/indicator_in_user_friend_recycler_view"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/green_dot" />

        <TextView
            android:id="@+id/active_or_not_text_in_friend_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Active" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
