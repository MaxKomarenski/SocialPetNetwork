<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primeBackground"
    tools:context="com.hollybits.socialpetnetwork.activity.RegistrationActivity">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/email_and_password_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/now_some_info_text_view"
                android:text="Now, some information "
                android:textColor="#0658a4"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/about_you_text_view"
                android:text="about you"
                android:textColor="#fff"
                android:textSize="15dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/owner_name_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your name"
            android:inputType="textPersonName"
            android:backgroundTint="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"/>

        <EditText
            android:id="@+id/owner_surname_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your surname"
            android:inputType="text"
            android:backgroundTint="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"/>

        <EditText
            android:id="@+id/phone_number_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:backgroundTint="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"/>

        <AutoCompleteTextView
            android:id="@+id/country_auto_complete_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:textColor="#fff"
            android:inputType="text"
            android:completionThreshold="1"
            android:backgroundTint="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"/>

        <EditText
            android:id="@+id/city_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"/>

        <EditText
            android:id="@+id/email_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <EditText
            android:id="@+id/password_edit_text_in_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:backgroundTint="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <ImageButton
            android:id="@+id/registration_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/login_button"
            android:layout_gravity="end"
            android:background="@color/primeBackground"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/information_scroll_view"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            >

            <TextView
                android:id="@+id/choose_icon_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an icon of your pet"
                android:textColor="#fff"
                android:textSize="14dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/rat_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_rabbit"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <ImageButton
                        android:id="@+id/cat_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_cat"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <ImageButton
                        android:id="@+id/bird_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_bird"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <ImageButton
                        android:id="@+id/dog_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_dog"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <ImageButton
                        android:id="@+id/rabbit_rat_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_rabbit"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <ImageButton
                        android:id="@+id/raccoon_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_rabbit"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                </LinearLayout>

            </HorizontalScrollView>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/choose_photo_in_registration"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/plus_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/choose_photo_in_registration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/choose_photo_in_registration"
                    app:layout_constraintVertical_bias="0.555">

                    <EditText
                        android:id="@+id/name_edit_text_in_registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corners_edittext"
                        android:gravity="center_horizontal"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_of_edit_text"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textCursorDrawable="@drawable/color_cursor" />


                    <com.nightonke.jellytogglebutton.JellyToggleButton
                        android:id="@+id/sex_jelly_toggle_button"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        app:jtbEaseType="ease_in_out_circ"
                        app:jtbLeftTextSize="12sp"
                        app:jtbRightTextSize="12sp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>


            <AutoCompleteTextView
                android:id="@+id/breed_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breed"
                android:completionThreshold = "2"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:background="@drawable/rounded_corners_edittext"
                android:textColorHint="#fff"
                android:padding="@dimen/padding_of_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <EditText
                android:id="@+id/tag_number_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Tag id"
                android:textColor="#fff"
                android:inputType="number"
                android:background="@drawable/rounded_corners_edittext"
                android:textColorHint="#fff"
                android:padding="@dimen/padding_of_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

                <EditText
                    android:id="@+id/age_edit_text_in_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="number"
                    android:background="@drawable/rounded_corners_edittext"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/padding_of_edit_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/weight_edit_text_in_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight"
                    android:textColor="#fff"
                    android:inputType="number"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_corners_edittext"
                    android:textColorHint="#fff"
                    android:padding="@dimen/padding_of_edit_text"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="120dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/weight_switch_compat_in_registration_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:jtbEaseType="ease_in_out_circ"
                    app:jtbLeftTextSize="12sp"
                    app:jtbRightTextSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toEndOf="@+id/weight_edit_text_in_registration"
                    app:layout_constraintTop_toTopOf="parent"
                    app:showText="true"
                    />

                <!--<android.support.v7.widget.SwitchCompat-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/weight_switch_compat_in_registration_activity"-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:layout_marginTop="7dp"-->
                    <!--android:checked="false"-->
                    <!--android:textOff="kg"-->
                    <!--android:textOn="lb"-->
                    <!--android:textSize="22sp"-->
                    <!--app:layout_constraintStart_toEndOf="@+id/weight_edit_text_in_registration"-->
                    <!--app:layout_constraintTop_toTopOf="parent"-->
                    <!--app:showText="true"-->
                    <!--/>-->

            </android.support.constraint.ConstraintLayout>

            <lib.kingja.switchbutton.SwitchMultiButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attitude_switch_multi_button"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                app:strokeWidth="1dp"
                app:selectedTab="0"
                app:selectedColor="#ef8144"
                app:switchTabs="@array/switch_tabs"
                app:textSize="12sp" />


            <Button
                android:id="@+id/access_button_in_registration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button_selector"
                android:backgroundTint="#f36f21"
                android:elevation="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="continue   "
                android:drawableEnd="@drawable/ic_arrow_forward_white_24dp"
                android:gravity="end|center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>