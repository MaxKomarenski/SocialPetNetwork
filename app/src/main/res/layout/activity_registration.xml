<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.hollybits.socialpetnetwork.activity.RegistrationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/email_and_password_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center|top"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/now_some_info_text_view"
                    android:text="Now, some information "
                    android:textColor="#0658a4"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_you_text_view"
                    android:text="about you"
                    android:textColor="#fff"
                    android:textSize="15dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/owner_name_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your name"
                android:inputType="textPersonName"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/owner_surname_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your surname"
                android:inputType="text"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/phone_number_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <AutoCompleteTextView
                android:id="@+id/country_auto_complete_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:textColor="#fff"
                android:inputType="text"
                android:completionThreshold="1"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/city_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:textColor="#fff"
                android:backgroundTint="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/email_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:backgroundTint="#fff"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <EditText
                android:id="@+id/password_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:backgroundTint="#fff"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <EditText
                android:id="@+id/confirm_password_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:backgroundTint="#fff"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <ImageButton
                android:id="@+id/registration_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/login_button"
                android:layout_gravity="end"
                android:background="@color/primeBackground"/>
        </LinearLayout>

    </ScrollView>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/information_scroll_view"
        >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/choose_icon_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose an icon of "
                    android:textColor="#000"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/choose_icon_text_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your pet"
                    android:textColor="#86dbfb"
                    android:textSize="14dp"/>

            </LinearLayout>



            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/cat_pet_type_image_button"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_cat"
                            android:scaleType="fitCenter"
                            android:background="@drawable/circle_background"/>

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/cat_text"-->
                            <!--android:layout_marginTop="5dp"-->
                            <!--android:text="cat"-->
                            <!--android:textColor="#fff"/>-->

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/rat_pet_type_image_button"
                        android:visibility="gone"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_rabbit"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/dog_pet_type_image_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_dog"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="dog"-->
                        <!--android:id="@+id/dog_text"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:textColor="#fff"/>-->
                </LinearLayout>



                    <ImageButton
                        android:id="@+id/raccoon_pet_type_image_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_rabbit"
                        android:layout_marginStart="10dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/circle_background"/>

                </LinearLayout>

            </HorizontalScrollView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/choose_photo_in_registration"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/plus_photo"
                />

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">

                    <EditText
                        android:id="@+id/name_edit_text_in_registration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corners_edittext"
                        android:gravity="center_horizontal"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_of_edit_text"
                        android:textColor="@color/textColorHintInRegistration1"
                        android:textColorHint="@color/textColorHintInRegistration1"
                        android:textCursorDrawable="@drawable/color_cursor" />


                    <com.nightonke.jellytogglebutton.JellyToggleButton
                        android:id="@+id/sex_jelly_toggle_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:jtbEaseType="ease_in_out_circ"
                        app:jtbLeftTextSize="12sp"
                        app:jtbRightTextSize="12sp"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>



            <AutoCompleteTextView
                android:id="@+id/breed_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breed"
                android:completionThreshold = "2"
                android:textColor="@color/textColorHintInRegistration1"
                android:gravity="center_horizontal"
                android:inputType="text"
                android:background="@drawable/rounded_corners_edittext"
                android:textColorHint="@color/textColorHintInRegistration1"
                android:padding="@dimen/padding_of_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <EditText
                android:id="@+id/tag_number_edit_text_in_registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Tag id"
                android:textColor="@color/textColorHintInRegistration1"
                android:inputType="number"
                android:background="@drawable/rounded_corners_edittext"
                android:textColorHint="@color/textColorHintInRegistration1"
                android:padding="@dimen/padding_of_edit_text"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

                <EditText
                    android:id="@+id/age_edit_text_in_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="number"
                    android:background="@drawable/rounded_corners_edittext"
                    android:textColor="@color/textColorHintInRegistration1"
                    android:textColorHint="@color/textColorHintInRegistration1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/padding_of_edit_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <EditText
                    android:id="@+id/weight_edit_text_in_registration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Weight"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textColorHintInRegistration1"
                    android:inputType="number"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_corners_edittext"
                    android:textColorHint="@color/textColorHintInRegistration1"
                    android:padding="@dimen/padding_of_edit_text"
                    android:textCursorDrawable="@drawable/color_cursor"
                    />

                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/weight_switch_compat_in_registration_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    app:jtbEaseType="ease_in_out_circ"
                    app:jtbLeftTextSize="12sp"
                    app:jtbRightTextSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I am friendly to"/>

                <include layout="@layout/attitute_table"/>


            </LinearLayout>


            <Button
                android:id="@+id/access_button_in_registration"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_button_selector"
                android:backgroundTint="#f36f21"
                android:elevation="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="continue"
                android:gravity="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>