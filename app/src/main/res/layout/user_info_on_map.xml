<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_info_on_map_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/pet_name_in_map_info_window"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Sam"
        android:textColor="@color/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/owner_name_in_map_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Owner Name"
        android:textColor="@color/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breed_name_in_map_info_window" />

    <TextView
        android:id="@+id/breed_name_in_map_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Breed Name"
        android:textColor="@color/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/age_in_map_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:text="Age"
        android:textColor="@color/google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex_in_map_info_window" />


    <TextView
        android:id="@+id/sex_in_map_info_window"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/google"
        android:text="Sex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_name_in_map_info_window" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/owner_name_in_map_info_window"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/info_button_in_map_info_window"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:scaleType="fitCenter"
            android:src="@drawable/info_icon_on_map_window" />

        <TextView
            android:id="@+id/info_icon_in_map_info_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Info"
            android:textColor="@color/google" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
