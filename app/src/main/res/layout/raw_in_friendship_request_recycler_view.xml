<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo_in_friendship_recycler_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/test_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_of_user_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Max Komarenskii"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/user_photo_in_friendship_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/user_photo_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/place_of_user_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lviv, Ukraine"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/name_of_user_in_friendship_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/name_of_user_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/pet_name_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="16dp"
        android:text="bobik"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pet_breed_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="dolboeb"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/pet_name_in_friendship_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/pet_name_in_friendship_recycler_view" />

    <Button
        android:id="@+id/accept_button_in_friendship_recycler_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#080"
        app:layout_constraintEnd_toStartOf="@+id/reject_button_in_friendship_recycler_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_photo_in_friendship_recycler_view" />

    <Button
        android:id="@+id/reject_button_in_friendship_recycler_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="64dp"
        android:background="#d50c16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>