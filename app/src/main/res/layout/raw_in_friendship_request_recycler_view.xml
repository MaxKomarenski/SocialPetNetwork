<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo_in_friendship_recycler_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/test_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/owner_text_in_friendship_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="owner:"
        app:layout_constraintBottom_toBottomOf="@+id/name_of_user_in_friendship_recycler_view"
        app:layout_constraintStart_toEndOf="@+id/user_photo_in_friendship_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/name_of_user_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/name_of_user_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="17sp"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/owner_text_in_friendship_raw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/address_text_in_friendship_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="address:"
        app:layout_constraintBottom_toBottomOf="@+id/place_of_user_in_friendship_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/breed_text_in_friendship_raw"
        app:layout_constraintTop_toTopOf="@+id/place_of_user_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/place_of_user_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textStyle="italic"
        android:textColor="#000"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/pet_breed_in_friendship_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/pet_breed_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/pet_text_in_friendship_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pet:"
        app:layout_constraintBottom_toBottomOf="@+id/pet_name_in_friendship_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/owner_text_in_friendship_raw"
        app:layout_constraintTop_toTopOf="@+id/pet_name_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/pet_name_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/name_of_user_in_friendship_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/name_of_user_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/breed_text_in_friendship_raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breed:"
        app:layout_constraintBottom_toBottomOf="@+id/pet_breed_in_friendship_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/pet_text_in_friendship_raw"
        app:layout_constraintTop_toTopOf="@+id/pet_breed_in_friendship_recycler_view" />

    <TextView
        android:id="@+id/pet_breed_in_friendship_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/pet_name_in_friendship_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/pet_name_in_friendship_recycler_view" />

    <Button
        android:id="@+id/accept_button_in_friendship_recycler_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:background="#080"
        android:text="Accept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_of_user_in_friendship_recycler_view" />

    <Button
        android:id="@+id/reject_button_in_friendship_recycler_view"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="64dp"
        android:background="#d50c16"
        android:text="Reject"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/accept_button_in_friendship_recycler_view" />

</android.support.constraint.ConstraintLayout>