<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prime_constrainLayout_in_item"
    android:background="@drawable/background_for_raw_of_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/small_constraintLayout_in_item"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo_in_lost_pets_recycler_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/test_photo"
            app:civ_border_color="#43b748"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo_in_lost_pets_recycler_view"
            app:layout_constraintStart_toEndOf="@+id/user_photo_in_lost_pets_recycler_view"
            app:layout_constraintTop_toTopOf="@+id/user_photo_in_lost_pets_recycler_view"
            app:layout_constraintVertical_bias="0.444">

            <TextView
                android:id="@+id/name_of_user_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max Komarenskii"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalbaobik"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/breed_of_pet_in_user_friend_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="breed"
                android:textColor="#979ea4"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/indicator_in_user_friend_recycler_view"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/green_dot"
            app:layout_constraintBottom_toBottomOf="@+id/user_photo_in_lost_pets_recycler_view"
            app:layout_constraintEnd_toEndOf="@+id/user_photo_in_lost_pets_recycler_view" />

        <ImageButton
            android:id="@+id/add_to_friends_button"
            android:layout_width="50dp"
            android:layout_height="57dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="20dp"
            android:background="@color/google"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_dog" />

        <TextView
            android:id="@+id/add_to_friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Add To Friends"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/add_to_friends_button"
            app:layout_constraintStart_toStartOf="@+id/add_to_friends_button"
            app:layout_constraintTop_toBottomOf="@+id/add_to_friends_button"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>




</android.support.constraint.ConstraintLayout>