<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/icon_in_small_notification"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_dog"
        />

    <TextView
        android:id="@+id/notification_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon_in_small_notification"
        android:layout_marginStart="98dp"
        android:layout_toEndOf="@+id/icon_in_small_notification"
        android:text="TextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/notification_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/icon_in_small_notification"
        android:layout_alignStart="@+id/notification_type_text_view"
        android:text="TextView"
        app:layout_constraintVertical_bias="1.0" />


</RelativeLayout>